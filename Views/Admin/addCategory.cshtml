@{
    ViewBag.Title = "Add Place";
    Layout = "~/Views/Shared/GeneralLayout.cshtml";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-6">
        <form action="addcategory" method = 'post' enctype="multipart/form-data">
            <br />
            <fieldset>
        
	            <legend>PROVINE DETAIL</legend>
                <br/>
	            <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-6">
		                <label>Name of Province</label>
                    </div>
                </div>
                <br/>
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
		                <input type="text" name="pname" size="40" required />
                    </div>
                    
	            </div>
	            <br/>
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-3">
                        <label>Description</label>
                    </div>
                </div>
                <br/>
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
		                <textarea name="desc" cols="40" rows="5" required></textarea>
                    </div>
	            </div>
                <br/>
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-6">
		                <label>Image of Province</label>
                    </div>
                </div>
                <br/>
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
		                <input type="file" name="files" id="fileToUpload" onchange="dispImg" required>
                    </div>
	            </div>
	            <br/>
        
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
	                    <input type="submit" value="submit">
                    </div>
                </div>
                <br />
            </fieldset>
            </form>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-6" >
            <img id="plimg"/>
        </div>
    </div>
</div>
