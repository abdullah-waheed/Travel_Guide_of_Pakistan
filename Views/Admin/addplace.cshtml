@model List<TravelGuide.Models.City>
@{
    ViewBag.Title = "Add Place";
    Layout = "~/Views/Shared/GeneralLayout.cshtml";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-1"></div>
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-5">
        <form action="addPlace" method = 'post' enctype="multipart/form-data">
            <br />
            <fieldset>
        
	            <legend>PLACE DETAIL</legend>
	            <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
		                <label>Select City</label>
                    </div>
                </div>
                <br/>
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
		                <select name="city" id="countrySelector">
                            <option value="0">-Select City-</option>
                            @{
                                foreach (var city in Model)
                                {
                                    <option value="@city.City_Id">@city.Name</option>
                                }
                            }
                        </select>
	                </div>
                </div>
                <br/>
	            <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-6">
		                <label>Enter Name</label>
                    </div>
                </div>
                <br/>
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
		                <input type="text" name="pname" size="40" required />
                    </div>
	            </div>
	            <br/>
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-6">
                        <label>Description</label>
                    </div>
                </div>
                <br/>
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
		                <textarea name="desc" cols="40" rows="5" required></textarea>
                    </div>
	            </div>
	            <br/>
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-8">
		                <label>Map <span style="color:red;font-size:15px;"> (Enter the URL of Google Maps of this Place)</span></label>
                    </div>
                </div>
                <br/>
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
		                <input type="text" name="map" size="40" required />
                    </div>
	            </div>
                <br/>
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-8">
		                <label>Add one or more images of the Place</label>
                    </div>
                </div>
                <br/>
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
		                <input type="file" name="files" id="fileToUpload" multiple required>
                    </div>
	            </div>
	            <br/>
        
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
	                    <input type="submit" value="submit">
                    </div>
                </div>
                <br />
            </fieldset>
            </form>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-6">
            <center><img id="plimg"  style="margin-top:30%;"/></center>
        </div>
    </div>
</div>
